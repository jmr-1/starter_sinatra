    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>Edit <%= @movie.title%> page</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="">
    </head>
    <body>
        <h2>"Edit <%= @movie.title %>'s page"</h2>

        <form method="post" action="/movies/<%=@movie.id %>">
            <input type="hidden" name="_method" value="patch">
            <ul>
                <li><label for="title">Title</label>
                <input type="text" name="title" value="<%= @movie.title %>">
                </li>

                <li><label for="length">Length</label>
                <input type="number" name="length" step="1" value="<%= @movie.length %>">
                </li>

                <li><label for="genre">Genre</label>
                <input type="text" name="genre" value="<%= @movie.genre %>">
                </li>

                <input type="submit" value="Edit this movie">
            </ul>
        </form> 
        <br>
        <a href="/movies/<%= @movie.id %>">"Click to go back to this movie's original page"</a>
        <br>
        <a href="/home">Click to go back home </a>
    </body>
</html>